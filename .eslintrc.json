{
    "parser": "vue-eslint-parser",
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:vue/vue3-recommended"
    ],
    "parserOptions": {
        "parser": "@babel/plugin-syntax-jsx",
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "vue",
        "@babel/eslint-parser"
    ],
    "rules": {
        "brace-style": [
            "error",
            "1tbs"
        ],
        "indent": [
            "error",
            2
        ],
        "linebreak-style": [
            "error",
            "windows"
        ],
        "quotes": [
            "error",
            "double"
        ],
        "semi": [
            "error",
            "always"
        ]
    },
    "settings": {
        "import/resolver": {
            "alias": {
                "extensions": [".js"],
                "map": [
                    ["src", "./src"],
                    ["app", "./src"]
                ]
            }
        }
    }
}